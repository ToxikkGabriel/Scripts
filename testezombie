local OldNameCall = nil
local active = false
OldNameCall = hookmetamethod(game, "__namecall", function(Self, ...)
	local Args = {...}
	local NamecallMethod = getnamecallmethod()
	if tostring(Self) == "Workspace" and tostring(NamecallMethod) == "FindPartOnRayWithIgnoreList" and active == false then
		Args[2] = {0,0,0}
		active = true
	end
	return OldNameCall(Self, ...)
end)
